<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zack.multithreadingandsavingdatatofileandsql.MainActivity">

    <TextView
        android:id="@+id/tvFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:text="Hello World!"
 />

    <Button
        android:id="@+id/btnExecuteFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:onClick="executeAsyncTasks"
        android:text="Test File (See Log)" />

    <Button
        android:id="@+id/btnAsyncTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:onClick="executeAsyncTasks"
        android:text="Test Async (See Log)" />

    <Button
        android:id="@+id/btnExecuteDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:onClick="executeDatabase"
        android:text="Test Database (See Log)" />

</RelativeLayout>
